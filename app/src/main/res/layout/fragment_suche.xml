<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SucheFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/suche_bar"
        android:background="?attr/colorPrimary"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="145dp"
            android:layout_marginEnd="145dp"
            android:text="@string/treffen"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/suche_bar"
        android:padding="10dp"
        android:id="@+id/suche_treffen_layout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_rounded_corner"
            android:layout_margin="10dp"
            android:hint="@string/treffenName"
            android:padding="10dp"
            android:elevation="4dp"
            android:layout_toStartOf="@+id/suche_treffen_btn"
            android:id="@+id/suche_treffen_input"
            />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_search_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/black"
            android:padding="4dp"
            android:layout_margin="10dp"
            android:id="@+id/suche_treffen_btn"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:background="@drawable/edit_text_rounded_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/suche_treffen_layout"
        android:padding="10dp"
        android:id="@+id/suche_treffen_recycler_view"
        />

</RelativeLayout>